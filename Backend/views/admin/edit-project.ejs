<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/project.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="project-form" action="/db/admin/<% if (editing) { %>edit-project<% } else { %>add-project<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= project.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="type">Type</label>
                <select>
                    <option >aerial</option>
                    <option >swarm</option>
                    <option >aerobatics</option>
                    <option >sae</option>
                  </select>
                  <br>
                  <p class="warning">* Write exactly same as in dropdown menu</p>
                  
                <input type="text" name="type" id="type" value="<% if (editing) { %><%= project.type %><% } %>">
            </div>

            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= project.imageUrl %><% } %>">
            </div>
            
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= project.description %><% } %></textarea>
            </div>

            <div class="form-control">
                <label for="description">Long Description</label>
                <textarea name="longDescription" id="longDescription" rows="5"><% if (editing) { %><%= project.longDescription %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= project._id %>" name="productId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <button class="btn" type="submit"><% if (editing) { %>Update Project<% } else { %>Add Project<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>